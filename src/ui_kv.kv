<LinkCard>
    padding: 20
    spacing: 20
    MDLabel:
        text: root.linktext
        font_name: app.font
        font_style: 'H6'
        halign: 'left'
    MDIconButton:
        icon: 'open-in-new'
        icon_size: 24
        size_hint: None, 4
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        md_bg_color: 1, 1, 1, 0.1
        on_release: root.open_url()

    MDIconButton:
        icon: 'close'
        icon_size: 24
        size_hint: None, 4
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        md_bg_color: 1, 1, 1, 0.1
        ripple_alpha: 0
        on_release: root.delete()

<LinkView>
    viewclass: 'LinkCard'
    RecycleBoxLayout:
        spacing: 10
        padding: 10
        default_size: None, 50
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'


<LinkBox>
    hint_text: 'Enter website URL'
    hint_text_color_normal: app.theme_cls.primary_light
    hint_text_color_focus: app.theme_cls.primary_light
    text_color_normal: app.theme_cls.primary_light
    text_color_focus: app.theme_cls.primary_light
    line_color_normal: app.theme_cls.primary_light
    line_color_focus: app.theme_cls.primary_light

    helper_text: 'Invalid URL'

    helper_text_mode: 'on_error'
    mode: 'line'
    multiline: True
    font_name: app.font

<MainScreen>
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        padding: 20
        MDCard:
            md_bg_color: 0.09, 0.09, 0.09, 0.07
            radius: 40
            border_radius: 40
            padding: 20

            MDBoxLayout:
                id: rootbox
                orientation: 'vertical'

                MDBoxLayout:
                    id: firstbox
                    size_hint: 1, 0.75

                    MDGridLayout:
                        cols: 1
                        rows: 2
                        size: 128, 200
                        size_hint: None, None
                        spacing: 10
                        padding: [10, 10, 10, 10]
                        pos_hint: {'center_x': 0.5,'center_y': 0.8}

                        MDFloatingActionButton:
                            icon: 'download'
                            icon_size: 64
                            halign: 'center'
                            size_hint: 1, 1

                        MDFloatingActionButton:
                            icon: 'folder'
                            icon_size: 64
                            halign: 'center'
                            size_hint: 1, 1
                    
                    LinkView:
                        id: fv




                MDGridLayout:
                    size_hint: 1, 0.15
                    cols: 3
                    rows: 1
                    spacing: 20

                    MDFloatingActionButton:
                        icon: 'autorenew'
                        icon_size: 48
                        halign: 'center'
                        on_press: root.text_reset()
                        size_hint: None, None
                    MDScrollView:
                        do_scroll_x: False
                        effect_cls: 'ScrollEffect'
                        LinkBox:
                            id: fb
                    MDFloatingActionButton:
                        icon: 'plus'
                        icon_size: 48
                        halign: 'center'
                        on_press: root.text_button()
                        size_hint: None, None
