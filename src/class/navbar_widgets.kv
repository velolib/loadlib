<LinkCard>
    md_bg_color: app.theme_cls.primary_color
    radius: dp(25)
    MDScreen:
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        size_hint: 1, None
        MDBoxLayout:
            padding: dp(20)
            spacing: dp(20)

            AsyncImage:
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                source: root.logo
                size_hint: None, None
                size: dp(36), dp(36)

            MDLabel:
                text: root.linktext
                theme_text_color: 'Custom'
                text_color: 0, 0, 0, 1
                font_name: app.font
                font_style: 'H6'
                halign: 'left'
                markup: True

            TooltipMDIconButton:
                icon: 'open-in-new'
                icon_size: dp(24)
                size_hint: None, 0.75
                width: self.height
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                md_bg_color: 0, 0, 0, 1
                on_release:
                    import webbrowser
                    webbrowser.open(root.puretext)
                icon_color: app.theme_cls.primary_color
                theme_icon_color: 'Custom'

            TooltipMDIconButton:
                icon: 'close'
                icon_size: dp(24)
                size_hint: None, 0.75
                width: self.height
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                md_bg_color: 0, 0, 0, 1
                on_release: root.delete()
                icon_color: app.theme_cls.primary_color
                theme_icon_color: 'Custom'
                ripple_alpha: 0

<LinkView>
    viewclass: 'LinkCard'
    RecycleBoxLayout:
        id: rbl
        spacing: dp(10)
        padding: dp(10)
        default_size: None, dp(50)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'


<LinkBox>
    hint_text: 'Enter website URL'
    hint_text_color_normal: app.theme_cls.primary_color
    hint_text_color_focus: app.theme_cls.primary_color
    text_color_normal: app.theme_cls.primary_color
    text_color_focus: app.theme_cls.primary_color
    line_color_normal: app.theme_cls.primary_color
    line_color_focus: app.theme_cls.primary_color

    helper_text: 'Invalid URL'
    helper_text_mode: 'on_error'
    mode: 'line'
    multiline: True
    font_name: app.font
